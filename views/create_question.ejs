    <main>
        <div class="container">

            <div class="headline">

            </div>
        
            <div class="container-main">

                <h3>Stelle deine Frage ...</h3>
                <form action="create_question" method="POST" name="question" id="question" enctype="multipart/form-data">
                    <input type="text" name="title" placeholder="Worum geht's?" class="textf">
                    <br>
                    
                    <textarea name="txt" id="txt" cols="50" rows="15" placeholder="Was genau ist dein Problem?"></textarea>
                    <br>
                    <input type="submit" class="btn">
                </form>
            </div>

            <div class="container-head">
                <h4>& füge ein Bild hinzu</h4>
                <input type="file" name="img" id="" accept="image/jpeg" form="question">
            </div>

        </div>

    </main>


</body>
