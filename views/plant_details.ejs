                    <td>Wuchstyp </td>
                    <td>
                        <%= posts.wuchstyp%>
                    </td>
                <tr>
                    <td>Standort </td>
                    <td>
                        <%= posts.standort%>
                    </td>
                <tr>
                    <td>Gießen </td>
                    <td>
                        <%= posts.giessen%>
                    </td>
                <tr>
                    <td>Schwierigkeit </td>
                    <td>
